(define (counter)
  (let ((lock (new-lock))
        (state (ref 0)))
    (lambda (op)
      (if (equal? op 'inc)
          (begin
            (acquire lock)
            (ref-set state (+ (deref state) 1))
            (release lock))
          (if (equal? op 'dec)
              (begin
                (acquire lock)
                (ref-set state (- (deref state) 1))
                (release lock))
              (if (equal? op 'get)
                  (deref state)
                  (error "unknown operation")))))))

(define (thread cnt ops)
  (if (= ops 0)
      'done
      (let ((op (random 3)))
        (if (= op 0)
            (cnt 'inc)
            (if (= op 1)
                (cnt 'dec)
                (cnt 'get)))
        (thread cnt (- ops 1)))))

(define NOPS (random 42))
(define (create-threads cnt n)
  (letrec ((loop (lambda (i acc)
                   (if (= i n)
                       acc
                       (loop (+ i 1) (cons (fork (thread cnt NOPS)) acc))))))
    (loop 0 '())))

(define N (random 42))
(define cnt (counter))
(map (lambda (t) (join t))
     (create-threads cnt N))
(display "result: ")
(display (cnt 'get))
